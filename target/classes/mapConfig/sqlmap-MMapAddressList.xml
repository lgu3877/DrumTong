<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 	
		"-//mybatis.org//DTD Mapper 3.0//EN" 
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 지도 전국 지역 정보 테이블	 -->
<mapper namespace="com.drumtong.map.dao.MMapAddressListDAO">

	
<!-- 	시도 select문  -->
	<select id="selectMMapAddressA"  resultType="string">
		SELECT 
			DISTINCT(ADDRESSA)
		FROM 
			MAPADDRESSLIST
	</select>
	
	
<!-- 	시,군,구 select문 -->
	<select id="selectMMapAddressB"  parameterType="string" resultType="string">
        SELECT
            DISTINCT(ADDRESSB)
        FROM 
            MAPADDRESSLIST
        WHERE ADDRESSA = #{value}
    </select>

<!-- 	읍,면,동 select문 -->
	<select id="selectMMapAddressC"  parameterType="hashmap" resultType="string">
        SELECT 
            ADDRESSC
        FROM 
            MAPADDRESSLIST
        WHERE ADDRESSA =#{addressa} and ADDRESSB=#{addressb}
    </select>
    
</mapper>
